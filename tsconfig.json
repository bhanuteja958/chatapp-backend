{
    "compilerOptions": {
        "outDir": "dist",
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "sourceMap": true,
        "rootDir": "src",
        "typeRoots": ["types", "node_modules/@types"],
        "esModuleInterop": true
    },
    "include": ["src/**/*", "types/**/*.d.ts"],
    "exclude": ["node_modules", "dist"]
}
